<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- ChangeSet to update NULL values to -1 -->
    <changeSet id="20240606-1" author="ilya">
        <update tableName="bills">
            <column name="message_id" valueNumeric="-1"/>
            <where>message_id IS NULL</where>
        </update>
    </changeSet>

    <!-- ChangeSet to modify column to NOT NULL -->
    <changeSet id="20240606-2" author="ilya">
        <addNotNullConstraint columnName="message_id" tableName="bills"/>
    </changeSet>

</databaseChangeLog>
