<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


    <changeSet id="20240802-1" author="ilya">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="user_settings" columnName="skip_zeros"/>
            </not>
        </preConditions>
        <addColumn tableName="user_settings">
            <column name="skip_zeros" type="boolean" defaultValueBoolean="true"/>
        </addColumn>
    </changeSet>

    <changeSet id="20240802-2" author="ilya">
        <!-- add not null constraint to the new column -->
        <addNotNullConstraint columnName="skip_zeros" tableName="user_settings"/>
    </changeSet>


</databaseChangeLog>
